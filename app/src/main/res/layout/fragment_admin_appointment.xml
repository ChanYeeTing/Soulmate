<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminAppointmentFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/telemedicineButton1"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/menu_telemedicine"
            android:textAlignment="center"
            android:textSize="28dp"
            android:textStyle="bold"
            app:backgroundTint="#55B1FA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.337" />

        <Button
            android:id="@+id/clinicButton1"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/clinic_hospitals"
            android:textAlignment="center"
            android:textSize="28dp"
            android:textStyle="bold"
            app:backgroundTint="#4EC7FF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.142" />

        <Button
            android:id="@+id/vaccinationButton1"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/vaccination_button"
            android:textAlignment="center"
            android:textSize="28dp"
            android:textStyle="bold"
            app:backgroundTint="#3FE9FF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.535" />

        <Button
            android:id="@+id/bloodButton1"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/blood_donation"
            android:textAlignment="center"
            android:textSize="28dp"
            android:textStyle="bold"
            app:backgroundTint="#00D8C4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.736" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#58E1F3"
            android:fontFamily="serif"
            android:text="   - Appointment Page -   "
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.041" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/material_dynamic_primary70"
            android:fontFamily="sans-serif-black"
            android:text="Back"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.963" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>